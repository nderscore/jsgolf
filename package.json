{
  "name": "jsgolf",
  "author": "_nderscore",
  "description": "javascript code golf competition website",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "testrunner"
  ],
  "scripts": {
    "client": "yarn workspace @jsgolf/client",
    "server": "yarn workspace @jsgolf/server",
    "testrunner": "yarn workspace @jsgolf/testrunner",
    "build:client": "yarn client build",
    "build:server": "yarn server build",
    "build:testrunner": "yarn testunner build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  }
}
